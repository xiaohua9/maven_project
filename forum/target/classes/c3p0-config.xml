<?xml version="1.0" encoding="UTF-8"?>
<c3p0-config>
    <!-- 默认配置，如果没有指定则使用这个配置 -->
    <default-config>
        <property name="user">root</property>
        <property name="password">root</property>
        <property name="jdbcUrl">jdbc:mysql://localhost:3306/hpbbs?useUnicode=true<![CDATA[&]]>characterEncoding=UTF-8</property>
        <property name="driverClass">com.mysql.jdbc.Driver</property>

        <property name="checkoutTimeout">30000</property><!-- 超时时间 -->
        <property name="idleConnectionTestPeriod">30</property>
        <property name="initialPoolSize">3</property><!-- 初始化数据库连接池时连接的数量 -->
        <property name="maxIdleTime">30</property>
        <property name="maxPoolSize">100</property><!-- 数据库连接池中的最大的数据库连接数 -->
        <property name="minPoolSize">2</property><!-- 数据库连接池中的最小的数据库连接数 -->
        <property name="maxStatements">200</property><!-- 可同时执行的语句数 -->
    </default-config>
</c3p0-config>
